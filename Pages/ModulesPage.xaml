<Page
	x:Class="ScheduleWPF.Pages.ModulesPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ScheduleWPF.Pages"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="ModulesPage"
	d:DesignHeight="450"
	d:DesignWidth="800" Loaded="ModulesPage_OnLoaded"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<StackPanel Margin="0,5" Orientation="Horizontal">
			<ComboBox
				Name="CbSort"
				Width="150"
				Padding="5"
				VerticalAlignment="Center"
				materialDesign:HintAssist.Hint="Сортировка"
				materialDesign:HintAssist.IsFloating="True"
				SelectionChanged="CbSort_OnSelectionChanged"
				Style="{DynamicResource MaterialDesignOutlinedComboBox}" />
			<ComboBox
				Name="CbFilter"
				Width="150"
				Margin="5,0"
				Padding="5"
				VerticalAlignment="Center"
				materialDesign:HintAssist.Hint="Фильтрация"
				materialDesign:HintAssist.IsFloating="True"
				SelectionChanged="CbFilter_OnSelectionChanged"
				Style="{DynamicResource MaterialDesignOutlinedComboBox}" />
			<TextBox
				Name="TbSearch"
				Width="150"
				VerticalAlignment="Center"
				Style="{DynamicResource MaterialDesignTextBox}"
				TextChanged="TbSearch_OnTextChanged" />
		</StackPanel>

		<DataGrid
			Name="DGridStudents"
			Grid.Row="1"
			AutoGenerateColumns="False"
			IsReadOnly="True">
			<DataGrid.Columns>
				<DataGridTextColumn
					Width="2*"
					Binding="{Binding Fullname}"
					Header="ФИО" />
				<DataGridTextColumn
					Width="*"
					Binding="{Binding Phone}"
					Header="Телефон" />
				<DataGridTextColumn
					Width="*"
					Binding="{Binding Email}"
					Header="Почта" />
				<DataGridTextColumn
					Width="*"
					Binding="{Binding Address}"
					Header="Адрес" />
				<DataGridTextColumn
					Width="*"
					Binding="{Binding Group.Title}"
					Header="Группа" />
				<DataGridTemplateColumn x:Name="CellEdit" Width="*">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Button
								x:Name="BtnEdit"
								Click="BtnEdit_OnClick"
								Content="Редактировать" />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Grid.Row="2" Orientation="Horizontal">
			<Button
				Name="BtnAdd"
				Margin="5"
				Click="BtnAdd_OnClick"
				Content="Добавить" />
			<Button
				Name="BtnDelete"
				Click="BtnDelete_OnClick"
				Content="Удалить" />
		</StackPanel>
	</Grid>
</Page>
