<Page
    x:Class="ScheduleWPF.Views.Pages.RegPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="RegPage"
    d:DesignHeight="200"
    d:DesignWidth="300"
    Loaded="RegPage_OnLoaded"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Width="300" Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Регистрация" />
            <TextBox
                Name="TbLogin"
                md:HintAssist.Hint="Логин"
                md:HintAssist.IsFloating="True" />
            <PasswordBox
                Name="PbPassword"
                md:HintAssist.Hint="Пароль"
                md:HintAssist.IsFloating="True" />
            <ComboBox
                Name="CbRole"
                Margin="0,5"
                md:HintAssist.Hint="Кто вы?" />
            <Button Click="BtnReg_Click" Content="Зарегистрироваться" />
        </StackPanel>
    </Grid>
</Page>