<Page
	x:Class="ScheduleWPF.Pages.AuthPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	Title="Auth"
	HorizontalAlignment="Center"
	VerticalAlignment="Center"
	d:DesignHeight="250"
	d:DesignWidth="300"
	Loaded="AuthPage_OnLoaded"
	mc:Ignorable="d">
	<Grid>
		<StackPanel Width="300" Orientation="Vertical">
			<TextBlock
				Margin="0,0,0,30"
				HorizontalAlignment="Center"
				FontSize="24"
				FontWeight="Bold"
				Text="Авторизация" />
			<TextBox
				Name="TbLogin"
				Margin="0,5"
				HorizontalContentAlignment="Center"
				md:HintAssist.Hint="Логин" />
			<PasswordBox
				Name="PbPassword"
				Margin="0,5"
				HorizontalContentAlignment="Center"
				md:HintAssist.Hint="Пароль" />
			<CheckBox
				Name="CbRemember"
				Margin="5,10"
				Content="Запомнить" />
			<Button
				Margin="0,5"
				Click="BtnAuth_Click"
				Content="Войти"
				Foreground="White" />
			<Button
				Click="BtnRegMove_Click"
				Content="Регистрация"
				Foreground="White" />
		</StackPanel>
	</Grid>
</Page>